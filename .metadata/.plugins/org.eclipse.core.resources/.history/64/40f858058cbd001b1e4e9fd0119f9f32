package decisao;

import javax.swing.JOptionPane;

public class Exercicio3 {
	public static void main(String[] args) {
	
		String nome = JOptionPane.showInputDialog("nome: ").toUpperCase();
		float salarioBruto = Short.parseShort(JOptionPane.showInputDialog("salário: "));
		//float salario = 0;
		short faltas = Short.parseShort(JOptionPane.showInputDialog("faltas: "));
		if (faltas == 0) {
			salarioBruto = salarioBruto + (salarioBruto*(float)0.2);
			if (salarioBruto <= 1100) {
				System.out.println("O salário total é: " + (salarioBruto - (salarioBruto * (float) 0.075)));
			} else {
				System.out.println("Oi");
			
			}
		}
	}
}
