package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		float jogador1=0;
		float jogador2=0;
		int tentativa = 0;

		jogador1 = Float.parseFloat(JOptionPane.showInputDialog("Digite um número J1: "));
		//if (jogador2 == jogador1) {
			//System.out.println("Parabéns, você acertou com: " + tentativa + " tentativas");
		//} else {
			do {
				tentativa = (tentativa + 1);
				jogador2 = Float.parseFloat(JOptionPane.showInputDialog("Adivinhe J2: ")); {
					if (jogador2 < jogador1) {
						System.out.println("o número é maior do que esse");
					} else if (jogador2 > jogador1){
						System.out.println("o número é menor que esse");
					} else {
						System.out.println("Parabéns, você acertou com: " + tentativa + " tentativas");
					}
				}
			} while (jogador2 != jogador1);
		}
	//	System.out.println("Boa");
	}
//}
