package repeticao;

import javax.swing.JOptionPane;

public class Exercicio2 {

	public static void main(String[] args) {
		
		//String cargo = JOptionPane.showInputDialog("Qual o cargo: ").toUpperCase();
		//String email = JOptionPane.showInputDialog("Email: ").toUpperCase();
		//String produto = "";
		//int qtde=0;
		//float valor=0;
		//float valorUni=0;
		String func= "";
		float cont=0;
		float salario=0;
		float somaSalario=0;
		float qtdePessoas=0;
		float maior=0;
		
		do {
			qtdePessoas++;
			cont = salario;
			String cargo = JOptionPane.showInputDialog("Qual o cargo: ").toUpperCase();
			salario = Float.parseFloat(JOptionPane.showInputDialog("Salario: "));
			somaSalario = (salario+cont);
			System.out.println(cargo + "=" + salario);
			//System.out.println(salario);
			if (salario > maior) {
				maior = salario;
				func = cargo;
			}
		} while(JOptionPane.showConfirmDialog(
				null, "Deseja adicionar algo?", "Funcionarios", JOptionPane.YES_NO_CANCEL_OPTION)==0);
				System.out.println("Soma dos salários: " + somaSalario);
				System.out.println("Média: " + (somaSalario / qtdePessoas));
				System.out.println("Maior salário é: " + maior + " do: " + func);				
	}
}
