package decisao;

import javax.swing.JOptionPane;

public class Exercicio3 {
	public static void main(String[] args) {
	
		String nome = JOptionPane.showInputDialog("nome: ").toUpperCase();
		float salario = Short.parseShort(JOptionPane.showInputDialog("salário: "));
		short faltas = Short.parseShort(JOptionPane.showInputDialog("faltas: "));
		if (faltas == 0) {
			salario = salario + ((float) 0.2 * 100);
			System.out.println( nome + " o seu salário é : " + salario);
		} else {
			System.out.println( nome + " o seu salário é : " + salario);
		}
}
}
