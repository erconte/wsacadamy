package repeticao;

import javax.swing.JOptionPane;

public class Exercicio2 {

	public static void main(String[] args) {
		
		String nome = "";
		String email = "";
		String produto = "";
		int qtde=0;
		float valor=0;
		
		do {
			nome = JOptionPane.showInputDialog("Nome: ").toUpperCase();
			email = JOptionPane.showInputDialog("Email: ").toUpperCase();
			produto = JOptionPane.showInputDialog("produto: ").toUpperCase();
			qtde = Integer.parseInt(JOptionPane.showInputDialog("Qtde: "));
			valor = Float.parseFloat(JOptionPane.showInputDialog("Valor: "));
			System.out.printf(nome + "Produto: %s quantidade: %.2f\n valor: %f", produto, qtde, valor);
			
		} while(JOptionPane.showConfirmDialog(
				null, "Deseja adicionar itens a sua compra?", "Compra", JOptionPane.YES_NO_CANCEL_OPTION)==0);
	}
}
