package variaveis;

public class ManipulaString {
	public static void main(String[] args) {
		String email = "ErIcKconte@outlook.com";
		System.out.println("Original: " + email);
		System.out.println("Minuscula: " + email.toLowerCase());
		System.out.println("Maiusculo: " + email.toUpperCase());
		System.out.println("Tem arroba?: " + email.contains("@"));
		System.out.println("Posição do @: " + email.indexOf("@"));
		System.out.println("Qtde: " + email.length());
		System.out.println("Do segundo até o quinto: " + email.substring(1,5));
		System.out.println("Primeira metade: " + email.substring(0, email.length()/2));
		System.out.println("Antes do @: " + email.substring(0, email.indexOf("@")));
		System.out.println("Antes do @: " + email.substring(email.indexOf("@", 0)));
		//
		//e r i c k c o n t e @ o u t l o o k . c o m
	}

}
