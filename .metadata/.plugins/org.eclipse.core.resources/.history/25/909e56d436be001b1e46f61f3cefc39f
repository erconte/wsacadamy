package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		
		int tentativa = 0;
		int jogador2 = 0;
		int jogador1 = Integer.parseInt(JOptionPane.showInputDialog("Digite um número J1: "));
		//if (jogador2 == jogador1) {
			//System.out.println("Parabéns, você acertou com: " + tentativa + " tentativas");
		//} else {
			do {
				tentativa++;
				jogador2 = Integer.parseInt(JOptionPane.showInputDialog("Adivinhe J2: ")); {
					if (jogador2 < jogador1) {
						JOptionPane.showMessageDialog(null,  "O número é maior que esse.");
						//System.out.println("o número é maior do que esse");
					} else if (jogador2 > jogador1){
						System.out.println("o número é menor que esse");
					} else {
						System.out.println("Parabéns, você acertou com: " + tentativa + " tentativas");
					}
				}
			} while (jogador2 != jogador1);
		}
	//	System.out.println("Boa");
	}
//}
